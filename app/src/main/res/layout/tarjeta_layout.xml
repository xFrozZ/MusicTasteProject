<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Principal"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:padding="5dp">

    <ImageView
        android:id="@+id/imagenCancion"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/profile_icon_png_898" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="222dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_usuario"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Nombre usuario" />

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="128dp"
                android:layout_height="25dp"
                android:paddingStart="5dp"
                android:text="Username" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="181dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="91dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_Cancion"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="Cancion:" />

                <TextView
                    android:id="@+id/txt_Autor"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="Autor:" />

                <TextView
                    android:id="@+id/txt_Rating"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="Rating:" />

                <TextView
                    android:id="@+id/txt_Comentario"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="Comentario:" />

                <TextView
                    android:id="@+id/txt_Link"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="Link:" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="215dp"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_cancion"
                    android:layout_width="215dp"
                    android:layout_height="30dp"

                    android:text="Cancion"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_autor"
                    android:layout_width="215dp"
                    android:layout_height="30dp"

                    android:text="Autor" />

                <TextView
                    android:id="@+id/tv_rating"
                    android:layout_width="215dp"
                    android:layout_height="30dp"

                    android:text="Rating personal" />

                <TextView
                    android:id="@+id/tv_comentario"
                    android:layout_width="215dp"
                    android:layout_height="30dp"

                    android:text="Comentario" />

                <TextView
                    android:id="@+id/tv_link"
                    android:layout_width="215dp"
                    android:layout_height="58dp"

                    android:text="Link" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>

